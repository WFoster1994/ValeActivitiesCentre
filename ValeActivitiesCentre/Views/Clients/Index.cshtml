@model IEnumerable<ValeActivitiesCentre.Models.Client>

@{
    ViewBag.Title = "Client Details";
}

<div class="jumbotron">
    <h2>Vale Activities Centre - Staff Portal</h2>
    <h3>@ViewBag.Title</h3>
</div>

<p>
    @Html.ActionLink("Add New Client Details", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientProfile.BestComunicationApproach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RiskAssessment.PhysicalHealthNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Funding)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientProfile.BestComunicationApproach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RiskAssessment.PhysicalHealthNotes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funding)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientID }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.ClientID }, new { @class = "btn btn-info"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientID}, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
