@model IEnumerable<ValeActivitiesCentre.Models.Address>

@{
    ViewBag.Title = "Staff and Client Addresses";
}

<div class="jumbotron">
    <h2>Vale Activities Centre - Staff Portal</h2>
    <h3>@ViewBag.Title</h3>
</div>
<p>
    @Html.ActionLink("Add New Address", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.House)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TownName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.County)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postcode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.House)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TownName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.County)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postcode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AddressID }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.AddressID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.AddressID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
