@model IEnumerable<ValeActivitiesCentre.Models.Activity>

@{
    ViewBag.Title = "Our Activities";
}

<div class="jumbotron">
    <h2>Vale Activities Centre</h2>
    <h3>@ViewBag.Title</h3>
</div>
<div class="row">
    @foreach (var activity in Model)
     {

        <div id="ActivityDate" class="col-md-4">
            <br /><br /><br />
            <p><img src="~/Images/Activities/@activity.ImageURL" alt="Photo of @activity.ActivityName" width="300" height="200" /></p>
            <h4>@activity.ActivityName</h4><p>
                @Html.ActionLink("Learn More", "ActivityDetails", "Activities",
                    new { id = activity.ActivityID }, new { @class = "btn btn-success" })</p>
            <br />
        </div>
     }
</div>

