@model IEnumerable<ValeActivitiesCentre.Models.Activity>

@{
    ViewBag.Title = "Our Activities";
}

<div class="jumbotron">
    <h2>Vale Activities Centre</h2>
    <h3>@ViewBag.Title</h3>
</div>

@foreach (var activity in Model)
{
    <section class="row">
        <section class="col-lg-4">
            <h2>@activity.Name</h2>
            <p>@activity.Description</p>
            <br /> <br />
        </section>

        <section class="col-lg-4">
            <br /><br /><br /> 
            <p>@activity.Day @activity.Time</p>
            <p></p>
            <br /> <br />
        </section>

        <section class="col-lg-4">
            <br /><br /><br /> 
            <p><img src="~/Images/Activities/@activity.ImageURL" alt="Photo of @activity.Name" width="200" height="100" /></p>
            <br /><br /><br />
        </section>
       
    </section>
}

