@model IEnumerable<ValeActivitiesCentre.Models.Activity>

@{
    ViewBag.Title = "Our Activities";
}

<div class="jumbotron">
    <h2>Vale Activities Centre</h2>
    <h3>@ViewBag.Title</h3>
</div>

@foreach (var activity in Model)
{
<section>

    <section class="col-lg-12">
        <br /><br /><br />
        <p><img src="~/Images/Activities/@activity.ImageURL" alt="Photo of @activity.Name" width="200" height="100" /></p>
        <h4>@activity.Name</h4><p>@Html.ActionLink("Learn More", "ActivityDetails", "Activities", new { id = activity.ActivityID}, new { @class = "btn btn-success" })</p><br />
    </section>

</section>
}

