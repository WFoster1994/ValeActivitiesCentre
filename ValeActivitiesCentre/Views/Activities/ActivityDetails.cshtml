@model ValeActivitiesCentre.Models.Activity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Activity Details";
}

<div class="jumbotron">
    <h2>Vale Activities Centre</h2>
    <h3>@Model.ActivityName: All You Need to Know</h3>
</div>

<section class="row">
    <section class="col-lg-4">
        <h2>@Model.ActivityName</h2>
        <p>@Model.Description</p>
        <br /> <br />
    </section>

    <section class="col-lg-4">
        <p>
            @Model.Staff.Person.FirstName
        </p>
    </section>

    <section class="col-lg-4">
        <br /><br /><br />
        <p>@Model.Day @Model.Time</p>
        <p></p>
        <br /> <br />
    </section>
</section>
<br />

  <section class="row">
      <left>
          @Html.ActionLink("Back", "ActivitiesList", "Home", new { id = Model.ActivityID }, new { @class = "btn btn-success" })
      </left>
      <right>
         @Html.ActionLink("Book Activity", "BookActivity", "Activities", new { id = Model.ActivityID }, new { @class = "btn btn-success" })
      </right>      
  </section>
           


